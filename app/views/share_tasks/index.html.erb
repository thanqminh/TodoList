<p id="notice"><%= notice %></p>

<h1>Share Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task list</th>
      <th>Is write</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_tasks.each do |share_task| %>
      <tr>
        <td><%= share_task.user %></td>
        <td><%= share_task.task_list %></td>
        <td><%= share_task.is_write %></td>
        <td><%= link_to 'Show', share_task %></td>
        <td><%= link_to 'Edit', edit_share_task_path(share_task) %></td>
        <td><%= link_to 'Destroy', share_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

